<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/bg_line_lightgray">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            >
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                tools:text="오전 09시 20분"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                />

            <ImageView
                android:id="@+id/img_timeSeparator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@color/light_gray"
                android:layout_marginHorizontal="5dp"
                />

            <ImageView
                android:id="@+id/img_alarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/img_alarm"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_alarmTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                tools:text="오후 05시 38분"
                android:autoSizeTextType="uniform"
                android:textColor="@color/light_gray"
                android:gravity="top"
                android:autoSizeMinTextSize="8dp"
                android:autoSizeMaxTextSize="16dp"
                />
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/light_gray"
            android:layout_marginVertical="5dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            tools:text="타이틀"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/light_gray"
            android:layout_marginVertical="5dp"
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="내용내용"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


</LinearLayout>